{
  "compilerOptions": {
    "target": "ES2022", // Change this to your desired ECMAScript target version
    "module": "commonjs", // Change this to your desired module system (e.g., CommonJS, ES6)
    "outDir": "./dist", // Specify the output directory for compiled JavaScript files
    "rootDir": "./src", // Specify the root directory for your source TypeScript files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "jsx": "react", // Specify the JSX target (e.g., "react" or "react-jsx")
    "resolveJsonModule": true, // Allow importing JSON modules
    "baseUrl": "./", // Specify the base URL for module resolution
    "paths": {
      // Define path aliases for module resolution (optional)
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"], // Additional type definition locations
    "types": [], // Specify type packages to include (e.g., "node" for Node.js types)
    "lib": ["DOM", "ESNext"] // Specify the libraries to include (e.g., "DOM" for browser-specific APIs)
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Specify the files to include in compilation
  "exclude": ["node_modules", "build", "dist"] // Specify the files and directories to exclude from compilation
}
